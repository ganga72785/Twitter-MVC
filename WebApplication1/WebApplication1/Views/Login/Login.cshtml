
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <title>Welcome to My Twitter Clone</title>
    <style>
        fieldset.scheduler-border {
            border: solid 1px #DDD !important;
            padding: 0 10px 10px 10px;
            border-bottom: none;
        }

        legend.scheduler-border {
            width: auto !important;
            border: none;
            font-size: large;
            color: cornflowerblue;
        }
    </style>
</head>
<body>
    <form method="post">
        <div class="container" align="center">
            <br />
            <p align="center">
                @*<h3>Welcome to My Twitter Clone</h3>*@
                <fieldset class="scheduler-border" style="width:325px;">
                    <legend class="scheduler-border">Login</legend>
                    @using (Html.BeginForm())
    {
                    <table style="width:300px">
                        <tr>
                            <td>UserName</td>
                            <td>@Html.TextBox("uname")</td>
                        </tr>
                        <tr>
                            <td>Password</td>
                            <td>@Html.Password("pwd")</td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <br />
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </td>
                        </tr>
                        <tr>
                            <td  align="left" colspan="2">
                                @Html.ActionLink("New User ?", "Signup")
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <label class="alert-danger">@ViewBag.ErrorMessage</label>
                            </td>
                        </tr>
                    </table>
}
            </fieldset>
            </p>
        </div>
    </form>
</body>
</html>
